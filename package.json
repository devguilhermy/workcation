{
    "name": "react-tailwind-template",
    "version": "0.1.0",
    "private": false,
    "dependencies": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "tailwindcss": "^2.2.19"
    },
    "devDependencies": {
        "@types/react": "^17.0.37",
        "@types/react-dom": "^17.0.11",
        "autoprefixer": "^10.4.0",
        "postcss": "^8.4.1",
        "postcss-cli": "^9.0.2",
        "react-scripts": "^4.0.3",
        "typescript": "^4.1.2"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "build-css": "postcss src/css/tailwind.css -o public/css/tailwind-output.css",
        "watch-css": "postcss src/css/tailwind.css -o public/css/tailwind-output.css --watch"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "description": "Project template for React.js + TailwindCSS",
    "main": "src/index.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/devguilhermy/react-tailwind-template.git"
    },
    "keywords": [
        "react",
        "reactjs",
        "tailwindcss",
        "template"
    ],
    "author": "devguilhermy",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/devguilhermy/react-tailwind-template/issues"
    },
    "homepage": "https://github.com/devguilhermy/react-tailwind-template#readme"
}
